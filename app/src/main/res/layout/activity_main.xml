<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red_button"
        android:onClick="OnClickBtnRedBackground"
        android:text="@string/red"
        android:textColor="@color/red_text_background"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow_button"
        android:onClick="OnClickBtnYellowBackground"
        android:text="@string/yellow"
        android:textColor="@color/yellow_text_background"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_button"
        android:onClick="OnClickBtnGreenBackground"
        android:text="@string/green"
        android:textColor="@color/green_text_background"
        android:textSize="@dimen/text_size" />


</LinearLayout>